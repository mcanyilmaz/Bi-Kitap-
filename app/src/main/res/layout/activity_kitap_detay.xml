<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KitapDetay">

    <TextView
        android:layout_marginTop="35px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cekilecekKonuAdi"
        android:text="Cekilecek Konu Adi Burasidir."
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="70px"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cekilecekKonuDetayi"
        android:text="Cekilecek Konu Detayı Buraya Gelecek"
        android:gravity="center"
        android:layout_below="@+id/cekilecekKonuAdi"
        android:layout_marginTop="100px"
        android:textSize="60px"

        />

    <TextView
        android:textSize="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cekilecekKonuYazari"
        android:text="CEKİLECEK KONU YAZARI"
        android:gravity="center"
        android:layout_below="@+id/cekilecekKonuDetayi"
        android:layout_marginTop="100px"
        />


    <RatingBar
        android:rating="3.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_below="@+id/cekilecekKonuYazari"
        android:layout_marginTop="50px"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarButon"
        android:layout_below="@+id/ratingBar"
        android:text="Puan Ver ! "
        />


</RelativeLayout>